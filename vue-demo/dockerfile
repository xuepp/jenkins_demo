# 阶段1：构建静态文件
FROM node:18-alpine AS builder
WORKDIR /app
COPY vue-demo/package*.json ./
RUN npm install

COPY . .
# 假设构建命令为 npm run build
RUN npm run build

# 阶段2：运行 Nginx 服务
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY vue-demo/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]